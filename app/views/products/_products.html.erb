
<%= hidden_field_tag :sort_dir, params[:sort_dir] %>
<%= hidden_field_tag :sort_col, params[:sort_col] %>

<h1>Products</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "description" %></th>
      <th>Category</th>
      <th><%= sortable "price" %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.description, product_path(product) %></td>
        <td><%= product.category.nil? ? nil : product.category.name %></td>
        <td><%= number_to_currency product.price %></td>
        <td>
          <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', product_path(product), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @products %>

<%= link_to 'New', new_product_path, :class => 'btn btn-primary' %>
