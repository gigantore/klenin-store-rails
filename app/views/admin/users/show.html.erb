<h1>User</h1>

<p>
  <b>Login</b><br>
  <%= @user.login %>
</p>

<p>
  <b>Name</b><br>
  <%= @user.name %>
</p>

<p>
  <b>Email</b><br>
  <%= @user.email %>
</p>

<p>
  <b>Burthday</b><br>
  <%= @user.burthday %>
</p>

<p>
  <b>Role</b><br>
  <%= @user.role %>
